{
  "include": ["src/**/*.ts", "src/**/*.js"],
  "compilerOptions": {
    "lib": ["es2020"],
    "module": "commonjs",
    "target": "es2020",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./node_modules/@types", "src/types"],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
  }
}
